#!/usr/bin/env python

import jsonschema
from jsonschema import validate
import yaml
from yaml import load, dump, Loader, Dumper
import click
import os
import sys
from atlas_anndata import validate_anndata_with_config

@click.command()
@click.argument('config_file', type=click.Path(exists=True))
@click.argument('anndata_file', type=click.Path(exists=True))

def validate_anndata(config_file, anndata_file):

    validate_anndata_with_config(config_file, anndata_file)

if __name__ == '__main__':
    validate_anndata()
